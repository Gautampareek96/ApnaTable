<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/overlayCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="#F6EBE5D7"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.427"
            app:layout_constraintWidth_percent="0.75">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="70dp"
                android:text="Hello, what would you like to ask?"
                android:textColor="#5B3902"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/aiQueryEditText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="10dp"
                android:background="@android:drawable/edit_text"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp"
                android:hint="Ask me anything about food"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888" />

            <Button
                android:id="@+id/sendAiQueryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:layout_marginStart="70dp"
                android:text="Ask"
                android:backgroundTint="#E9A557"
                android:textColor="#FFFFFF"/>

        </androidx.cardview.widget.CardView>

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/topToolbar"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:background="#E9A557"
            android:elevation="4dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo_homepage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/square_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:id="@+id/profileLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/account"/>

                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Log In"
                        android:textAlignment="center"
                        android:textColor="#5B3902"
                        android:textSize="12sp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/chefImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/chef_hi"
            android:scaleX="-1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:translationX="-20dp"
            android:translationY="170dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Right side drawer -->
    <LinearLayout
        android:id="@+id/rightDrawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="#F8BE4C"
        android:padding="16dp">

        <TextView
            android:id="@+id/drawerProfile"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#E9E1D0"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:padding="25dp"
            android:textSize="20dp"
            android:text="Profile"
            android:textColor="#5B3902"/>

        <TextView
            android:id="@+id/drawerAbout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#E9E1D0"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"
            android:padding="25dp"
            android:text="About"
            android:textColor="#5B3902"/>

        <TextView
            android:id="@+id/drawerLogout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#E9E1D0"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"
            android:padding="25dp"
            android:text="Log Out"
            android:textColor="#5B3902"/>

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
